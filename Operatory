public class OperatorsApp {

    public static void main(String[] args) {

        String carModel = "Dodge Chellenger SRT 392";
        int price = 14999;
        int moneyInTheBank = 100000;
        boolean isDamaged = true;

        System.out.println("Price of a " + carModel + ": $" + price);
        int increasePrice = price + 1000;
        System.out.println("The increased price of a " + carModel + ": $" + increasePrice);
        int decreasedPrice = price - 1000;
        System.out.println("The decreased price of a " + carModel + ": $" + decreasedPrice);
        int twoTimesPrice = price * 2;
        System.out.println("2 Cars price of a " + carModel + ": $" + twoTimesPrice);
        int dodgesYouCanBuy = moneyInTheBank / price;
        System.out.println("From money we have in the bank we can buy: " + dodgesYouCanBuy + " " + carModel);
        int moneyRemaining = moneyInTheBank % price;
        System.out.println("money we would remain after buying: " + dodgesYouCanBuy + " " + carModel + " $" + moneyRemaining);
        System.out.println();

        int priceNegative = -14999;
        int priceNegativeWithPlusSign = +priceNegative;
        System.out.println("Negative price with plus sign: $" + priceNegativeWithPlusSign);
        int priceNegativeWithMinusSign = -priceNegative;
        System.out.println("Negative price with minus sign: $" + priceNegativeWithMinusSign);
        int priceOneEuroPriceIncrease = ++price;
        System.out.println("Price after increment: $" + priceOneEuroPriceIncrease);
        int priceOneEuroPriceDecrease = --price;
        System.out.println("Price after decrement: $" + priceOneEuroPriceDecrease);
        System.out.println("This car is damaged: " + !isDamaged);


        System.out.println("Car's price equals the money in the bank: " + (price == moneyInTheBank));
        System.out.println("Car's price doesn't equals the money in the bank: " + (price != moneyInTheBank));
        System.out.println("Car's price greater the money in the bank: " + (price > moneyInTheBank));
        System.out.println("Car's price lesser than the money in the bank: " + (price < moneyInTheBank));
        System.out.println("Car's price equals the money in the bank: " + (price <= moneyInTheBank));
        System.out.println("Car's price equals the money in the bank: " + (price <= moneyInTheBank));
        System.out.println("The car model variable's data type is a string: : " + (carModel instanceof String));

        String damagedText = isDamaged ? "The car is damaged" : "The car isn't damaged";
        System.out.println(damagedText);
        System.out.println();

        String worthSeeingText = !isDamaged || price <= 20000 ? "It's worth" : "Isn't worth";
        System.out.println(worthSeeingText);

        String worthReparingText = isDamaged && price <= 10000 ? "It's worth reparing" : "Isn't worth reparing";
        System.out.println(worthReparingText);


        price +=1000;
        System.out.println("Increase price: $" + price);
        price -=2000;
        System.out.println("Decreased price: $" + price);
        price *=2;
        System.out.println("Multipled price: $" + price);
        price /=2;
        System.out.println("Divided price: $" + price);
        price %=10000;
        System.out.println("Price remaind: $" + price);

    }}
